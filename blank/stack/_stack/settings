#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export VCW_STACK_GLOBAL_STACKS="hkvb/poc/blank/stack"
export VCW_STACK_GLOBAL_STACKNAMES="blank"
export VCW_STACK_GLOBAL_BOOTSTACKS="_blank"
export VCW_STACK_GLOBAL_RUNSTACKS=""
export VCW_STACK_GLOBAL_VOLUME_LIST="${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_volume"
export VCW_STACK_GLOBAL_VOLUME_INITIALISED="${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_volume:/etc/blank"
# END CONFIGURATION

# START GLOBAL SETTINGS
export VCW_STACK_GLOBAL='\
$VCW_STACK_GLOBAL_SERVICE_NAME,\
$VCW_STACK_GLOBAL_IMAGE_NAME,\
$VCW_STACK_BLANK_ENVIRONMENT,\
$VCW_STACK_BLANK_COMMAND,\
$VCW_STACK_BLANK_PORTS,\
$VCW_STACK_BLANK_VOLUMES,\
$VCW_STACK_BLANK_NETWORKS,\
$VCW_STACK_BLANK_DEPLOY_MODE,\
$VCW_STACK_GLOBAL_NETWORKS,\
$VCW_STACK_GLOBAL_VOLUMES'
export VCW_STACK_GLOBAL_SERVICE_NAME="blank"
export VCW_STACK_GLOBAL_IMAGE_NAME="hkvb/poc.blank.image"
export VCW_STACK_BLANK_ENVIRONMENT=
export VCW_STACK_BLANK_COMMAND="--keepalive:60"
export VCW_STACK_BLANK_PORTS=
export VCW_STACK_BLANK_VOLUMES="'${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_volume:/etc/blank'"
export VCW_STACK_BLANK_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay"
export VCW_STACK_BLANK_DEPLOY_MODE="replicated"
export VCW_STACK_GLOBAL_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay: { external: true }"
export VCW_STACK_GLOBAL_VOLUMES="${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_volume: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS traefik.base
export VCW_STACK_BLANK_MODULE_SOME_SETTING="${CONFIGURATION_MODULE_BLANK_SOME_SETTING}"
export VCW_STACK_BLANK_DEPLOY_RESOURCES_LIMITS_MEMORY="${CONFIGURATION_MODULE_BLANK_MEMORY_LIMIT}"
export VCW_STACK_BLANK_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="${CONFIGURATION_MODULE_BLANK_MEMORY_RESERVED}"
# END SETTINGS traefik.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
